<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GryKarciane.ViewModels"
             x:Class="GryKarciane.Views.MainView"
             Width="800" Height="450">

	<!-- DataContext - powiązanie z ViewModel -->
	<UserControl.DataContext>
		<vm:MainViewModel />
	</UserControl.DataContext>

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
		<TextBlock Text="Wybierz grę karcianą" FontSize="24" FontWeight="Bold"/>

		<!-- Panel logowania -->
		<TextBlock Text="Login:" FontSize="16"/>
		<TextBox Width="200" Name="LoginBox" Text="{Binding Login}" />

		<!-- Wybór gry -->
		<TextBlock Text="Wybierz grę:" FontSize="16" Margin="0,20,0,5"/>
		<!--<Button Content="Poker" Width="200"/-->
		<!--Button Content="Makao" Width="200"/-->
		<!--Button Content="Wojna" Width="200"/-->
		<!--Button Content="Tysiąc" Width="200"/-->
		
	</StackPanel>
</UserControl>


